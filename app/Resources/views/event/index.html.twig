{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">
    <div class="card">
    <div class="card-header">
        <h2 class="card-title">Events</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped">
        	<thead>
        		<tr>
        			<th>Event Name</th>
        			<th>Category</th>
        			<th>Day</th>
        			<th></th>
        		</tr>
        	</thead>
        	<tbody>
        		{% for event in events %}
        		<tr>
        			<td>{{event.name}}</td>
        			<td>{{event.category.name}}</td>
        			<td>{{event.day|date('F j, Y, g:i a')}}</td>
        			<td>
        				<a href="{{url('homepage')}}category/edit/{{event.id}}" class="btn btn-secondary">Edit</a>
        				<a href="{{url('homepage')}}category/edit/{{event.id}}" class="btn btn-danger">Delete</a>
        			</td>
        		</tr>
        		{% endfor %}
        	</tbody>
        </table>
    </div>
</div>
</div>
{% endblock %}
