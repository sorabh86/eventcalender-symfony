                              <a class="dropdown-item" href="{{url('homepage')}}events">List Event</a>
                              <a class="dropdown-item" href="{{url('homepage')}}event/create">Create New</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    {% block javascripts %}{% endblock %}
